{% extends "./base.njk" %}
{% block content %}
<div id="main-content" class="main-content">
	<main class="main-primary" id="main">
		<div class="container p-t-md">
  {# Breadcrumbs (rendering data from /src/_data/breadcrumbs.json and /src/_data/helpers.js  #}
    {% include "../breadcrumbs.njk" %}

			<div class="row">
				<div class="col-lg-3">
     {# SIde navigation (rendering data from /src/_data/sidenavigation.json  and /src/_data/helpers.js  #}
					<nav aria-labelledby="getting-started" class="side-navigation sticky-6">
		   {# Links with subnav #}


<ul class="list-navigation">
  <ul class="list-navigation">
  				{% for item in sidenavigation.sidenavigation %}
      {% if 'subnav' in item %}
        <li><a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</a>
         {# subnav #}
           <ul>
            {% for subitem in item.subnav %}
            <li>
             <a href="{{ subitem.url }}" {{ helpers.getLinkActiveState(subitem.url, page.url) | safe }}>{{ subitem.text }}</a>
            </li>
            {% endfor %}
           </ul>
           
        </li>
       {% else %}
          <li><a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</a></li>
       {% endif %}
      {% endfor %}
 </ul>

					</nav>
				</div>
				<div class="col-lg-9 p-b-lg">
					{{ content | safe }}
				</div>
			</div>
		</div>
	</main>
</div>
{% endblock %}